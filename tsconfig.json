{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ]
}